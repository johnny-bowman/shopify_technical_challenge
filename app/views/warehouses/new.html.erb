<% if flash[:error] %>
  <% flash[:error].each do |error| %>
    <strong><%= error %></strong>
    <br>
  <% end %>
<% end %>

<%= form_with url: "/warehouses", method: :post, local: true do |f| %>
  <%= f.label :address %>
  <%= f.text_field :address, style: 'text-transform: capitalize;' %>
  <%= f.label :city %>
  <%= f.text_field :city, style: 'text-transform: capitalize;' %>
  <%= f.label :state %>
  <%= f.text_field :state, style: 'text-transform: capitalize;' %>
  <%= f.label :country %>
  <%= f.text_field :country, style: 'text-transform: capitalize;' %>
  <%= f.label :postal_code %>
  <%= f.number_field :postal_code %>

  <%= f.submit "Create Warehouse" %>
<% end %>
