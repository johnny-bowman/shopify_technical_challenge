<% if flash[:error] %>
  <% flash[:error].each do |error| %>
    <strong><%= error %></strong>
    <br>
  <% end %>
<% end %>
<br>
<%= form_with url: "/items", method: :post, local: true do |f| %>
  <%= f.label :name, "Name: " %>
  <%= f.text_field :name %>
  <%= f.label :description, "Description: " %>
  <%= f.text_field :description %>
  <%= f.label :unit_price, "Unit Price: $" %>
  <%= f.number_field :unit_price %>

  <%= f.submit "Create Item" %>
<% end %>
